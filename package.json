{
  "scripts": {
    "lint": "npm run lint:styles",
    "lint:styles": "npx stylelint '**/*.scss' '**/*.vue' --cache",
    "setup": "npm run setup:app-extension && npm run setup:docs && npm run setup:ui",
    "setup:app-extension": "cd app-extension && npm i && cd ..",
    "setup:docs": "cd docs && npm i && cd ..",
    "setup:ui": "cd ui && npm i && cd ..",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "postcss-html": "^1.3.0",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0"
  }
}
