{
  "moduleFileExtensions": [
    "js",
    "json",
    "vue"
  ],

  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },

  "setupFilesAfterEnv": ["<rootDir>/jest-setup.js"],

  "transform": {
    ".*\\.(js)$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },

  "transformIgnorePatterns": [
    "node_modules"
  ]
}
